<UserControl x:Class="Tuner.Polytune.Del"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 mc:Ignorable="d">

    <Viewbox x:Name="LayoutRoot">
        <Grid Margin="2">
            <Ellipse x:Name="DelRoot" Width="5" Height="5" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="{DynamicResource DELColor-Off}" Visibility="Visible" />
            <Ellipse x:Name="DelLight" Width="8" Height="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Viewbox>

</UserControl>
